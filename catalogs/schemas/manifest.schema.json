{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Akara Studio Catalog Manifest",
  "description": "Main catalog manifest with version hashes and metadata",
  "type": "object",
  "properties": {
    "schemaVersion": {
      "type": "string",
      "description": "Version of the schema format",
      "const": "1.0.0"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    },
    "catalogs": {
      "type": "object",
      "properties": {
        "wallpapers": {
          "type": "object",
          "properties": {
            "indexHash": {
              "type": "string",
              "pattern": "^[a-f0-9]{8}$",
              "description": "8-character hash of the wallpapers index file"
            },
            "count": {
              "type": "integer",
              "minimum": 0,
              "description": "Total number of wallpapers"
            },
            "lastUpdated": {
              "type": "string",
              "format": "date-time"
            }
          },
          "required": ["indexHash", "count", "lastUpdated"],
          "additionalProperties": false
        },
        "music": {
          "type": "object",
          "properties": {
            "indexHash": {
              "type": "string",
              "pattern": "^[a-f0-9]{8}$",
              "description": "8-character hash of the music index file"
            },
            "count": {
              "type": "integer",
              "minimum": 0,
              "description": "Total number of music tracks"
            },
            "lastUpdated": {
              "type": "string",
              "format": "date-time"
            }
          },
          "required": ["indexHash", "count", "lastUpdated"],
          "additionalProperties": false
        }
      },
      "required": ["wallpapers", "music"],
      "additionalProperties": false
    },
    "stats": {
      "type": "object",
      "properties": {
        "totalItems": {
          "type": "integer",
          "minimum": 0
        },
        "totalDownloads": {
          "type": "integer",
          "minimum": 0
        },
        "featuredItems": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "type": { "enum": ["wallpaper", "music"] },
              "title": { "type": "string" }
            },
            "required": ["id", "type", "title"]
          },
          "maxItems": 10
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["schemaVersion", "lastUpdated", "catalogs"],
  "additionalProperties": false
}
